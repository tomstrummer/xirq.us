extends layout

block content
  h1 Login
  form(action="/login", method="post")
    div
      label User name:
      input(type="text", name="username")
    div
      label Password:
      input(type="password", name="password")
    div
      input(type="submit", value="Log In")
    p or 
      a(href='/register', title='Register') Register

    if("undefined" != typeof( message ))
      #errors=message
